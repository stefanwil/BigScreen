@page
@model BigScreen.Pages.TifoAdm.IndexModel

@{
    ViewData["Title"] = "Tifo Admin";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="text-danger">
    @TempData["FailText"]
</div>
<div class="text-success">
    @TempData["SuccessText"]
</div>

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tifo[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tifo[0].Path)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tifo[0].ContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tifo[0].LengthOfMedia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tifo[0].TifoHeight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tifo[0].TifoWidth)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Tifo)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Path)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LengthOfMedia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TifoHeight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TifoWidth)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table>
