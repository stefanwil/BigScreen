@page
@model BigScreen.Pages.TicketAdm.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Ticket</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Ticket.ApplicationUserId" value="@ViewBag.ApplicationUserId" />
            <div class="form-group">
                <label asp-for="Ticket.Title" class="control-label"></label>
                <input asp-for="Ticket.Title" class="form-control" />
                <span asp-validation-for="Ticket.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.ArenaEventId" class="control-label"></label>
                <select asp-for="Ticket.ArenaEventId" class="form-control" asp-items="ViewBag.ArenaEventId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.SeatId" class="control-label"></label>
                <select asp-for="Ticket.SeatId" class="form-control" asp-items="ViewBag.SeatId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Ticket.TifoId" class="control-label"></label>
                <select asp-for="Ticket.TifoId" class="form-control" asp-items="ViewBag.TifoId"></select>
            </div>

        
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
